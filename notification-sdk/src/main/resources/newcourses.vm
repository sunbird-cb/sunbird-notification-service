                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </a>
                            #end
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2">
                            #if ($course7)
                            <a href='$course7_url' target="_blank">
                                <div class="content-box mr-20">
                                    <div class="image-box">
                                        <img src="$course7_thumbnail">
                                    </div>
                                    <div class="content-text-box">
                                        <table class="card-text-table">
                                            <tbody>
                                                <tr><td><p class="course-name">$course7_name</p></td></tr>
                                            <tr><td><span class="course-duration">$course7_duration</span></td></tr>
                                            </tbody>
